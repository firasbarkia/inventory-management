            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Item A\",\n  \"quantity\": 100,\n  \"supplier\": { \"id\": 1 }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/items",
              "host": ["{{base_url}}"],
              "path": ["api", "items"]
            }
          }
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Item A\",\n  \"quantity\": 150,\n  \"supplier\": { \"id\": 1 }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/items/1",
              "host": ["{{base_url}}"],
              "path": ["api", "items", "1"]
            }
          }
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/items/1",
              "host": ["{{base_url}}"],
              "path": ["api", "items", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Suppliers",
      "item": [
        {
          "name": "Get All Suppliers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/suppliers",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers"]
            }
          }
        },
        {
          "name": "Get Supplier By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/suppliers/1",
              "host": ["{{base_url}}"],
              "path": ["api", "suppliers", "1"]
            }
          }
        },
        {
          "name": "Create Supplier",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{jwt_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Supplier A\",\n  \"contactInfo\": \"contact@example.com\"\n}"
